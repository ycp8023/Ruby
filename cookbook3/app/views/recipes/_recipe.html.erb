<div id="<%= dom_id recipe %>">
  <p>
    <strong>Title:</strong>
    <%= recipe.title %>
  </p>

  <p>
    <strong>Categories:</strong>
    <%= recipe.category.name if recipe.category %>
  </p>

  <p>
    <strong>Instructions:</strong>
    <%= recipe.instructions if recipe.instructions %>
  </p>


</div>
