<!DOCTYPE html>
<html>
  <head>
    <title>Project</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://cdn.staticfile.org/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>
<body>
  <nav class="navbar navbar-default" role="navigation">

    <div class="container-fluid">
      <div class="navbar-header">
        <%#= link_to "呜呜rails学不会の简易电商平台", home_index_url %>
        <a class="navbar-brand" href="/">呜呜rails学不会の简易电商平台</a>
<!--        <img src="/project/app/assets/icon.jpg" alt="Icon" />-->
      </div>
      <div>
        <% if user_signed_in? %>
          <ul class="nav navbar-nav">
            <li><a href="#">用户(<%= current_user.email %>):(<%= current_user.id %>已登录</a></li>
          </ul>
          <ul class="nav navbar-nav">
            <li><%= link_to "产品列表", products_path %></li>
          </ul>
          <ul class="nav navbar-nav">
            <li><%= link_to "购物车", cart_items_path %></li>
          </ul>
          <ul class="nav navbar-nav">
            <li><%= link_to "我的订单", transaction_orders_path %></li>
          </ul>
          <ul class="nav navbar-nav">
            <li><%= link_to "我的收藏", stars_path %></li>
          </ul>
          <ul class="nav navbar-nav">
            <li><%= link_to "个人中心", users_index_path %></li>
          </ul>
          <ul class="nav navbar-nav" style="margin-top: 10px">
            <%= button_to "登出", destroy_user_session_path(@current_user),method: :delete %>
          </ul>
        <% else %>
          <% if admin_signed_in? %>
<!--            <p>管理员已登录.</p>-->
            <ul class="nav navbar-nav">
              <li ><a href="#">管理员(id:<%= current_admin.id %>)<%= current_admin.email %>已登录</a></li>
            </ul>
            <ul class="nav navbar-nav">
              <li><%= link_to "产品管理", products_path %></li>
            </ul>
            <ul class="nav navbar-nav">
              <li><%= link_to "订单管理", transaction_orders_path %></li>
            </ul>
            <ul class="nav navbar-nav" style="margin-top: 10px">
              <%= button_to "登出", destroy_user_session_path(@current_user),method: :delete %>
            </ul>
          <% else %>
            <ul class="nav navbar-nav">
              <li><%= link_to "用户登录", user_session_path %></li>
            </ul>
            <ul class="nav navbar-nav">
              <li><%= link_to "管理员登录", admin_session_path %></li>
            </ul>
          <% end %>
        <% end %>
      </div>
    </div>
  </nav>





    <%= yield %>
<!--    <div id="left-panel">-->
      <%# if current_user %>
<!--        <%#= current_user.username %> Logged in.<br/>-->
        <%#= link_to 'Logout', logout_users_path %>
      <%# else %>
<!--        Please <%#= link_to 'Login', login_users_path %>-->
      <%# end %>
<!--    </div>-->

  </body>
</html>
