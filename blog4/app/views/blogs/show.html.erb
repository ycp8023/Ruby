<p style="color: green"><%= notice %></p>

<%= render @blog %>

<div class="blog">
  <%= link_to "Edit this blog", edit_blog_path(@blog) %> |
  <%= link_to "Back to blogs", blogs_path %>
  <%= button_to "Destroy this blog", @blog, method: :delete %>

  <h2>Comments</h2>
  <%= link_to "Show all comments",blog_comments_path(@blog) %>
  <div id="comments">
    <%= render :partial => @blog.comments %>
  </div>

  <%= form_for [@blog, Comment.new] do |f| %>
    <p>
      <%= f.label :content, "New Comment" %> <br />
      <%= f.text_area :content, :rows => 5 %>
    </p>
    <p><%= f.submit "Add Comment" %></p>
  <% end %>

</div>
