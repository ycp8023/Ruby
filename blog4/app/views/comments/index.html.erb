<p style="color: green"><%= notice %></p>

<h1>Comments</h1>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
      <%= link_to 'Show',blog_comment_path(@blog,comment) %>
      <%= link_to 'Edit',edit_blog_comment_path(@blog,comment) %>
      <%= link_to 'Destroy', @comment, method: :delete, data: {
        confirm: 'Are you sure?' } %>
    </p>
  <% end %>
</div>

<%= link_to "New comment", new_blog_comment_path %>

